<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#D65744" />
            <stroke
                android:width="5dp"
                android:color="#d4eae8" />
            <corners
                android:bottomRightRadius="25dip"
        		android:bottomLeftRadius="25dip"  
        		android:topRightRadius="25dip"
        		android:topLeftRadius="25dip"/>
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#FF2A00"
                android:endColor="#540D00"
                android:angle="270" />
            <stroke
                android:width="5dp"
                android:color="#d4eae8" />
            <corners
                android:bottomRightRadius="25dip"
        		android:bottomLeftRadius="25dip"
        		android:topRightRadius="25dip"
        		android:topLeftRadius="25dip" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>
